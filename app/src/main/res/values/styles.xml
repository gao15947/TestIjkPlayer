<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Player_Text_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="Play_SeekBar_Style">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:focusable">true</item>
        <item name="android:progressDrawable">
            @drawable/ytj_player_progress_horizontal_holo_dark
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/ytj_player_progress_horizontal_holo_dark
        </item>
        <item name="android:thumb">@drawable/ytj_player_control_selector_holo_dark</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>
</resources>
